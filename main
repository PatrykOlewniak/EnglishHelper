import pymysql
from connection import Connection
import myconfig

password=myconfig.password
user=myconfig.user

class EnglishHelper():
    db_con = Connection(user=user, password=password, database='ENGLISH_HELPER')
    db_con.initial_connection()

    def menu(self):
        print ("A - add new World")
        choice = input()
        if choice=='A':
            print ("Write down your english world:")


    def query(cls, query, fetchAll=False):
        result = cls.db_con.query_exec(query, fetchAll=fetchAll)
        return result

    @classmethod
    def select(cls, query, fetchAll=False):
        result = cls.db_con.query_exec(query, fetchAll=fetchAll)
        return result




print EnglishHelper.select("SELECT * FROM ENGLISH_HELPER.EnglishWords")
